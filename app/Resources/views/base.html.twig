    <script>
    var navigation = new Vue({
   delimiters: ['${', '}'],
   el: '#navigation',
   data: {
       families_brother : [{% for family in brother_families %}{% if family %}{ url: "{{path('wishListByEmail', {email: family.admin.email, event: 1})}}", name: "{{family.name}}"}{% if loop.last == false %},{% endif %}{% endif %}{% endfor %}],
       nbNotif: {{ nbNotif }},
       notifications: [
    
       ],

   },

   methods: {
       readNotif: function () {
       $.ajax({
         type: "POST",
         url: "{{ path('readNotif')}}",
         data: {},
         cache: false,
         success: function(result){
             if(this.nbNotif > 0){
             result.forEach(function(element){
                navigation.notifications = [];
                navigation.notifications.push(
                {
                    id: element.id,
                    origin: element.origin,
                    date: element.date.date,
                    entity: element.entity,
                }
                );
             });
           
           this.nbNotif = 0;
           }
         }.bind(this),
         error : function(resultat, statut, erreur){
          toastr.error("Oups, une erreur s'est produite ðŸ˜©");
        }
     });
   },
   }
    });
    </script>
